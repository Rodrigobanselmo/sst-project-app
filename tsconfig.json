{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
      "strict": true,
      "target": "es5",
      "experimentalDecorators": true,
      "baseUrl": "./",
      "paths": {
          "@interfaces/*": ["src/interfaces/*"],
          "@assets/*": ["./src/assets/*"],
          "@components/*": ["./src/components/*"],
          "@constants/*": ["./src/constants/*"],
          "@screens/*": ["./src/screens/*"],
          "@libs/*": ["src/libs/*"],
          "@utils/*": ["./src/utils/*"],
          "@services/*": ["./src/services/*"],
          "@hooks/*": ["./src/hooks/*"],
          "@contexts/*": ["./src/contexts/*"],
          "@repositories/*": ["./src/repositories/*"],
          "@routes/*": ["./src/routes/*"]
      }
  }
}
